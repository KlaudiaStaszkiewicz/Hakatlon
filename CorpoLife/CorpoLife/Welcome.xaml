<Window  x:Class="CorpoLife.Welcome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CorpoLife"
        mc:Ignorable="d"
        Title="Welcome" Height="450" Width="800">
    <Grid KeyDown="OnKeyPress">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFD7D6D6" Offset="0"/>
                <GradientStop Color="#FFF8FFE2" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Canvas HorizontalAlignment="Left" Height="326" Margin="376,96,0,0" VerticalAlignment="Top" Width="419">
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFDEF9F3"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Canvas.Background>
            <Button Name="BtnCancel" Content="Cancel" Grid.Column="1" Padding="8" Click="BtnCancel_Click" Canvas.Left="242" Canvas.Top="175" />
            <TextBox Grid.Column="1" Name="InputTextBox" Padding="3,3,3,3" Canvas.Left="196" Canvas.Top="105" Width="99" />
            <PasswordBox Grid.Column="1" Name="PasswrdInput" Padding="3,3,3,3" Width="99" Canvas.Left="196" Canvas.Top="134" />
            <Label Content="ID:" Canvas.Left="167" Canvas.Top="106" />
            <Label Content="Password:" Canvas.Left="129" Canvas.Top="132"/>
        </Canvas>
        <Canvas HorizontalAlignment="Left" Height="242" Margin="0,52,0,0" VerticalAlignment="Top" Width="238">
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FFE5FBF6"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Canvas.Background>
            <Button Name="BtnOk" Content="OK" Grid.Column="0" Padding="8" Click="BtnOk_Click" Canvas.Left="572" Canvas.Top="220" />
            <Label Content="S&amp;S" Canvas.Left="32" Canvas.Top="30" FontSize="50" Width="150" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" FontFamily="Berlin Sans FB Demi"/>
        </Canvas>
        <Canvas HorizontalAlignment="Left" Height="163" Margin="563,0,0,0" VerticalAlignment="Top" Width="232">
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFD5FFE3" Offset="1"/>
                    <GradientStop Color="White"/>
                </LinearGradientBrush>
            </Canvas.Background>
        </Canvas>
        <Label Content="We are updating your informations. This may take a while..." HorizontalAlignment="Left" Margin="230,340,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
